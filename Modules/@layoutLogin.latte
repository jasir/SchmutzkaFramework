<!DOCTYPE html>
%html
	%head
		<meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
		<meta name="author" content="FreexIT.eu">
		<link rel="shortcut icon" href="{$basePath}/favicon.png">

		{control adminLoginCss}
		{control adminLoginJs}

		%title {include #title}

	%body
		#adminLogin
			#title [n:inner-block => "title"]
				{$adminTitle|isEmpty: "CMS Inutitivo"} - Přihlášení

			{control flashMessageControl}

			#loginbox

				{control loginControl:admin}
				<form id="recoverform" action="#" class="form-vertical">
					<p>Enter your e-mail address below and we will send you instructions how to recover a password.</p>
					<div class="control-group">
						<div class="controls">
							<div class="input-prepend">
								<span class="add-on">
									<i class="icon-envelope"></i>
								</span>
								<input type="text" placeholder="E-mail address" />
							</div>
						</div>
					</div>
					<div class="form-actions">
						<span class="pull-left">
							<a href="#" class="flip-link" id="to-login">&lt; Back to login</a>
						</span>
						<span class="pull-right">
							<input type="submit" class="btn btn-inverse" value="Recover" />
						</span>
					</div>
				</form>
