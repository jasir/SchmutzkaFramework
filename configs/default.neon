		permalogin:
			label: 'Zapamatovat'
		send:
			login: 'Přihlásit se'
			register: 'Registrovat'

	registration:
		onSuccess: 'Registrace proběhla úspěšně.'
		onSuccessAndLogin: 'Byli jste úspěšně registrováni a přihlášeni.'
		onAuthSuccess: 'Váš účet byl aktivován. Nyní se můžete přihlásit.'
		onAuthError: 'Tento odkaz již není platný.'


nette:
	session:
		autoStart: smart
		debugger: TRUE

	container:
		debugger: TRUE

	debugger:
		email: tomas.vot@gmail.com
		strictMode: TRUE
		showLocation: TRUE
		bar:
			- @cleanerPanel
			- @dumpMailPanel

	security:
		debugger: TRUE

	latte:
		macros:
			- Schmutzka\Templates\Macros::install


services:
	cache: Nette\Caching\Cache(@cacheStorage, 'dataCache')
	lessFilter: Schmutzka\Components\WebLoader\Filter\LessFilter
	pathFilter: Schmutzka\Components\WebLoader\Filter\PathFilter
	routerFactory: RouterFactory
	router: @routerFactory::createRouter
	session:
		setup:
	#		- setStorage(@sessionStorage)
			- setExpiration('+ 14 days')
	# sessionStorage: Schmutzka\Http\SessionStorage
	template:
		class: Schmutzka\Templates\TemplateService
		setup:
			- setLatte(@nette.latte)
	- lessc
	- Schmutzka\ParamService(@container::getParameters())
	- Schmutzka\Templates\Helpers


factories:
	cleanerPanel: Schmutzka\Diagnostics\Panels\CleanerPanel
	dumpMailPanel: Schmutzka\Diagnostics\Panels\DumpMail
	flashMessageControl: Components\FlashMessageControl
	gaControl: Components\GaControl
	rssControl: Components\RssControl
	titleControl: Components\TitleControl


extensions:
	- Kdyby\BootstrapFormRenderer\DI\RendererExtension
	- Schmutzka\DI\Extensions\SchmutzkaExtension
	webloader: WebLoader\Nette\Extension


webloader:
	css:
		default:
			filters:
				- @lessFilter
				- @pathFilter

	js:
		upload:
			files:
				- %assetsDir%/js/jquery/fileupload/jquery.ui.widget.js
				- %assetsDir%/js/jquery/fileupload/jquery.iframe-transport.js
				- %assetsDir%/js/jquery/fileupload/jquery.fileupload.js
